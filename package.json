{
    "name": "change-file-encoding-for-many-files",
    "displayName": "Change file encoding for many files",
    "description": "Change file encodings for many files",
    "version": "0.0.1",
    "publisher": "emilw",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.applyPreselectedXSL",
        "onCommand:extension.selectXSLToApply"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.applyPreselectedXSL",
                "title": "Apply pre selected XSL file"
            },
            {
                "command": "extension.selectXSLToApply",
                "title": "Select XSL file to apply"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "extension.selectXSLToApply",
                    "group": "7_modification"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "xslt-processor": "^0.10.1"
    }
}
